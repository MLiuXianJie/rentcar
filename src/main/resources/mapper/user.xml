<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qf.mapper.UserMapper">

    <select id="getUserByNameAndPWD" resultType="com.qf.entity.User">
    select  * from sys_user where tel=#{tel} and password=#{password}
    </select>
    <insert id="register">
        INSERT INTO sys_user (tel,password,email,invitation) values (#{tel},#{password},#{email},#{invitation})
    </insert>
    <select id="getUserByTel" resultType="com.qf.entity.User">
    select  * from sys_user where tel=#{tel}
    </select>
    <select id="getUserByEmail" resultType="com.qf.entity.User">
    select  * from sys_user where email=#{email}
    </select>
    <select id="getUserByPWD" resultType="com.qf.entity.User">
    select  * from sys_user where password=#{password}
    </select>
    <update id="updateTcl">
        update sys_user  set tel= #{tel} where id=#{id}
    </update>
    <update id="updateEmail">
        update sys_user  set email= #{email} where id=#{id}
    </update>
    <update id="updatePWD">
        update sys_user  set password= #{password} where id=#{id}
    </update>
</mapper>
